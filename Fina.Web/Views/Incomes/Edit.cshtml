                            <input asp-for="WorkHours" class="input-group-field" />
                            <span asp-validation-for="WorkHours" class="text-danger"></span>
                        </div>
                        <div class="input-group col-md-6">
                            <label asp-for="Amount" class="input-group-label"><i class="fa fa-coins"></i></label>
                            <input asp-for="Amount" class="input-group-field" />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="input-group">
                        <label asp-for="Function" class="input-group-label"><i class="fa fa-user"></i></label>
                        <input asp-for="Function" class="input-group-field" placeholder="Function" />
                        <span asp-validation-for="Function" class="text-danger"></span>
                    </div>

                    <div class="input-group">
                        <label asp-for="Company" class="input-group-label"><i class="fa fa-university"></i></label>
                        <input asp-for="Company" class="input-group-field" placeholder="Company" />
                        <span asp-validation-for="Company" class="text-danger"></span>
                    </div>

                    <br />

                    <div class="row">
                        <div class="col-sm-1"></div>

                        <div class="input-group col-sm-3">
                            <div class="checkbox">
                                <label>
                                    <input asp-for="Variable" /> VARIABLE
                                </label>
                            </div>
                        </div>
                        <div class="col-sm-1"></div>

                        <div class="input-group col-sm-6">
                            <input asp-for="StartDate" type="date" value="6/01/2019" name="Date" />
                        </div>
                        <div class="col-sm-1"></div>
                    </div>

                    <br />

                    <div class="form-group">
                        <input type="submit" value="Create" class="button expanded" />
                    </div>
                </div>
