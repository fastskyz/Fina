@model Fina.Web.Models.SignUpVm;

@{
    ViewData["Title"] = "Create";
}


<div class="simple-center-block">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <form asp-action="SignUp">
                <div class="sign-in-form">
                    <h4 class="text-center">Sign Up</h4>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" type="text" class="sign-in-form-field" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FirstName" class="control-label"></label>
                        <input asp-for="FirstName" type="text" class="sign-in-form-field" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" type="email" class="sign-in-form-field" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" type="password" class="sign-in-form-field" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Age" class="control-label"></label>
                        <input asp-for="Age" class="sign-in-form-field" />
                        <span asp-validation-for="Age" class="text-danger"></span>
                    </div>
                    <hr />
                    <div class="form-group">
                        <label asp-for="Country" class="control-label"></label>
                        <select asp-for="Country" class="sign-in-form-field">
                            @foreach (string country in Model.countries)
                            {
                                <option value="@country">@country</option>
                            }
                        </select>
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Currency" class="control-label"></label>
                        <select asp-for="Currency" class="sign-in-form-field">
                            @foreach (string currency in Model.currencies)
                            {
                                <option value="@currency">@currency</option>
                            }
                        </select>
                        <span asp-validation-for="Currency" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="sign-in-form-button" />
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>

</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
