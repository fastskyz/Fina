
@{
    ViewData["Title"] = "Home";
}



<header class="masthead d-flex">
    <div class="container text-center my-auto">
        <h1 class="mb-1">FINA</h1>
        <h3 class="mb-5">
            <em>A Free Tool To Help Manage Your Finances</em>
        </h3>
        <a class="btn btn-primary btn-xl js-scroll-trigger" asp-controller="User" asp-action="SignUp">Sign Up</a>
    </div>
    <div class="overlay"></div>
</header>


<section class="content-section bg-primary text-white text-center" id="services">
    <div class="container">
        <div class="content-section-heading">
            <h3 class="text-secondary mb-0">Services</h3>
            <h2 class="mb-5">What We Offer</h2>
        </div>
        <div class="row">
            <div class="col-lg-3 col-md-6 mb-5 mb-lg-0">
                <span class="service-icon rounded-circle mx-auto mb-3">
                    <i class="fas fa-binoculars"></i>
                </span>
                <h4>
                    <strong>Overview</strong>
                </h4>
                <p class="text-faded mb-0">Have a nice overview of all your finances!</p>
            </div>
            <div class="col-lg-3 col-md-6 mb-5 mb-lg-0">
                <span class="service-icon rounded-circle mx-auto mb-3">
                    <i class="icon-pencil"></i>
                </span>
                <h4>
                    <strong>Simple</strong>
                </h4>
                <p class="text-faded mb-0">A simple design everyone understands.</p>
            </div>
            <div class="col-lg-3 col-md-6 mb-5 mb-md-0">
                <span class="service-icon rounded-circle mx-auto mb-3">
                    <i class="icon-like"></i>
                </span>
                <h4>
                    <strong>A lot of options</strong>
                </h4>
                <p class="text-faded mb-0">Tons of options for all sorts of financial situations</p>
            </div>
            <div class="col-lg-3 col-md-6">
                <span class="service-icon rounded-circle mx-auto mb-3">
                    <i class="icon-mustache"></i>
                </span>
                <h4>
                    <strong>Question</strong>
                </h4>
                <p class="text-faded mb-0">We answer your questions within 24h!</p>
            </div>
        </div>
    </div>
</section>



<section class="content-section bg-primary text-white">
    <div class="container text-center">
        <h2 class="mb-4">Go For It!</h2>
        <a asp-controller="User" asp-action="Login" class="btn btn-xl btn-light mr-4">Login!</a>
        <a asp-controller="User" asp-action="SignUp" class="btn btn-xl btn-dark">Sign Up!</a>
    </div>
</section>

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded js-scroll-trigger" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>